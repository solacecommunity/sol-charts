{
  "name": "sol-charts",
  "version": "2.1.0",
  "author": "Thomas Kunnumpurath",
  "description": "A simple utility to chart stats from the Solace PubSub+ Broker",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "dev-electron": "run-p dev start-electron",
    "build-electron": "run-s build start-electron",
    "start-electron": "electron .",
    "lint": "prettier --check 'src/**/*.{html,js,svelte}'",
    "lint:fix": "prettier --write 'src/**/*.{html,js,svelte}'",
    "package-mac": "electron-packager public --overwrite --platform=darwin --arch=x64 --icon=public/solly.icns --prune=true --asar  --out=release-builds",
    "package-win": "electron-packager public --overwrite --platform=win32 --arch=x64 --icon=public/solly.ico --prune=true --asar --out=release-builds",
    "package-linux": "electron-packager public --overwrite --platform=linux --arch=x64 --icon=public/solly.ico --prune=true --asar --out=release-builds"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "autoprefixer": "^10.0.1",
    "carbon-components": "^10.22.0",
    "carbon-components-svelte": "^0.16.0",
    "cross-env": "^7.0.2",
    "electron": "^28.1.4",
    "electron-packager": "^17.1.2",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-load-config": "^3.0.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.1",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.29.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@carbon/charts": "^1.13.22",
    "@carbon/charts-svelte": "^1.13.22",
    "d3": "^7.8.5",
    "file-dialog": "^0.0.8",
    "file-saver": "^2.0.2",
    "sirv-cli": "^1.0.0",
    "svelte-spa-router": "^3.0.5"
  }
}
